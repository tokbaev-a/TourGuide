<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/locations_name"
        style="@style/TextView"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:textAllCaps="true"
        android:fontFamily="sans-serif" />


    <ImageView
        android:id="@+id/location_icon"
        style="@style/ImageView"
        android:src="@drawable/ic_baseline_place_24"
        android:layout_alignBottom="@id/card"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/location_address"
        style="@style/TextView"
        android:textColor="#FFFFFF"
        android:layout_alignBottom="@id/card"
        android:layout_toRightOf="@id/location_icon"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:id="@+id/description_icon"
        style="@style/ImageView"
        android:src="@drawable/ic_baseline_notes_24"
        android:layout_below="@id/card" />

    <TextView
        android:id="@+id/description"
        style="@style/TextView"
        android:layout_below="@id/card"
        android:textColor="#696969"
        android:layout_toRightOf="@id/description_icon"
        android:layout_marginBottom="14dp" />

    <TextView
        android:id="@+id/phone_number"
        style="@style/TextView"
        android:layout_below="@id/w_hours"
        android:textColor="#0288D1"
        android:layout_toRightOf="@id/description_icon"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="14dp" />


    <ImageView
        android:id="@+id/phone_number_icon"
        style="@style/ImageView"
        android:src="@drawable/ic_baseline_local_phone_24"
        android:layout_below="@id/w_hours"
        android:layout_toStartOf="@id/phone_number"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="14dp" />

    <ImageView
        android:id="@+id/w_hours_icon"
        style="@style/ImageView"
        android:src="@drawable/ic_baseline_access_time_24"
        android:layout_below="@id/description"
        android:layout_toLeftOf="@id/description"
        android:layout_marginTop="0dp"/>

    <TextView
        android:id="@+id/w_hours"
        android:textColor="#000000"
        style="@style/TextView"
        android:layout_below="@id/description"
        android:layout_toRightOf="@id/description_icon"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="0dp" />


    <ImageView
        android:id="@+id/hide_button"
        style="@style/ImageView"
        android:layout_marginRight="15dp"
        android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
        android:layout_alignParentRight="true"
        android:layout_marginTop="135dp" />

    <ImageView
        android:id="@+id/show_more_button"
        style="@style/ImageView"
        android:layout_marginRight="15dp"
        android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
        android:layout_alignParentRight="true"
        android:layout_marginTop="135dp"/>

</RelativeLayout>